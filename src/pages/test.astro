---
import Main from '../components/Main.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import Command from '../components/Command.astro';
import Screen from '../components/Screen.astro';

import Project from '../components/Project.astro';

import Experience from '../components/Experience.astro';

import Language from '../components/Language.astro';

import Award from '../components/Award.astro';
---
<html lang="en">
    <head>
        <title>iHDeveloper - About me</title>

        <Header />
    </head>
    <body>
        <Main>

            <!--- Test Command -->
            <Command>chmod +x test.sh && ./test.sh</Command>

            <!--- Test Screen -->
            <Screen>
                <p style="color:lightgray;font-style:italic;text-align:center;">Note: This page is used for testing the components of the page.</p>
            </Screen>

            <!--- Test Projects -->
            <Command>test ./components/Project.astro</Command>
            <Screen header="Projects">
                <Project name="H Company" year="2021" tag="Startup" description='A tech company that starts with letter "H"' website="https://github.com/iHDeveloper">
                    <ul name="achievements">
                        <li>Founding the company</li>
                        <li>Launching the startup and raise 5 million dollars</li>
                        <li>Manage a team of one person</li>
                    </ul>
                </Project>
            </Screen>

            <!--- Test Experience -->
            <Command>test ./components/Experience.astro</Command>
            <Screen header="Expereince">
                <Experience name="The H Company" position="CEO/CTO" duration="2021" color="aqua" icon="h.png" />
            </Screen>

            <!--- Test Programming Languages -->
            <Command>test ./components/Language.astro</Command>
            <Screen header="Programming Languages">
                <Language name="Visual Basic" year="2014" />
                <Language name="ZigLang" year="2021" />
            </Screen>

            <!--- Test Award -->
            <Command>test ./components/Award.astro</Command>
            <Screen header="Awards">
                <Award name="Made this website" month="July">
                    <span>The person who created this website</span>
                </Award>
            </Screen>

            <Footer />
        </Main>
    </body>
</html>
